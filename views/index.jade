extends layout

block content
    h1 Phonebook 
    div#left-column
        ul#entries
            each entry in entries
                li
                    a(href='#') #{entry}
    div#content
        div#name
            span(data-bind="text: name")
        div#phone
            span(data-bind="text: phone")
        div.new-entry
            p Create new entry:
            label(for='new-name') Name
            input#new-name(data-bind="value: name")
            label(for='new-phone') Phone
            input#new-phone(data-bind="value: phone")
            a(id='add-new-phone', href='#') Add
            &nbsp;
            a(id='del-phone', href='#') Delete

